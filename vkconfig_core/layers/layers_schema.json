{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/LunarG/VulkanTools/blob/vkconfig-layers-schema/vkconfig_core/layers/layers_schema.json",
    "$title": "Vulkan Layer Manifest File JSON Schema",
    "$description": "JSON Schema for validating the Vulkan Layer Manifest Files",
    "additionalProperties": false,
    "required": [
        "file_format_version",
        "layer"
    ],
    "properties": {
        "file_format_version": {
            "type": "string",
            "pattern": "^1.[0-9]+.[0-9]+$"
        },
        "layer": {
            "type": "object",
            "additionalProperties": true,
            "required": [
                "name",
                "library_path",
                "api_version",
                "implementation_version",
                "description"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^VK_LAYER_[A-Z0-9]+_[a-z0-9_]+"
                },
                "library_path": {
                    "type": "string"
                },
                "api_version": {
                    "$ref": "#/definitions/version",
                },
                "implementation_version": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "status": {
                    "$ref": "#/definitions/status"
                },
                "url": {
                    "type": "string"
                },
                "settings": {
                    "type": "array",
                    "$ref": "#/definitions/layer_settings"
                },
                "presets": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/preset"
                    }
                }
            }
        }
    },
    "definitions": {
        "version": {
            "description": "Version with a 'major', 'minor' and 'patch' format",
            "type": "string",
            "pattern": "^[0-9]+.[0-9]+.[0-9]+$"
        },
        "status": {
            "description": "The development status of the setting ('STABLE' by default)",
            "type": "string",
            "enum": [ "ALPHA", "BETA", "STABLE", "DEPRECATED" ]
        },
        "view": {
            "description": "The level of visibility of the setting ('STANDARD' by default)",
            "type": "string",
            "enum": [ "STANDARD", "ADVANCED", "HIDDEN" ]
        },
        "platforms": {
            "description": "The platforms where the setting is available (all by default)",
            "type": "array",
            "items": {
                "type": "string",
                "enum": [ "WINDOWS", "LINUX", "MACOS" ]
            }
        },
        "int_range": {
            "description": "A range of integer values",
            "type": "object",
            "items": {
                "additionalProperties": false,
                "properties": {
                    "min": {
                        "type": "integer"
                    },
                    "max": {
                        "type": "integer"
                    }
                }
            }
        },
        "float_range": {
            "description": "A range of floating-point values",
            "type": "object",
            "items": {
                "additionalProperties": false,
                "properties": {
                    "min": {
                        "type": "number"
                    },
                    "max": {
                        "type": "number"
                    }
                }
            }
        },
        "flags": {
            "type": "array",
            "items": {
                "required": [
                    "key",
                    "label",
                    "description"
                ],
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    },
                    "status": {
                        "$ref": "#/definitions/status"
                    },
                    "view": {
                        "$ref": "#/definitions/view"
                    },
                    "platforms": {
                        "$ref": "#/definitions/platforms"
                    }
                }
            }
        },
        "preset": {
            "required": [
                "label",
                "description",
                "settings"
            ],
            "additionalProperties": false,
            "properties": {
                "label": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                },
                "platforms": {
                    "$ref": "#/definitions/platforms"
                },
                "status": {
                    "$ref": "#/definitions/status"
                },
                "settings": {
                    "$ref": "#/definitions/preset_settings"
                }
            }
        },
        "preset_settings": {
            "description": "The different kind of settings stored in a preset",
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "value"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "value"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "value": {
                                "type": "boolean"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "value"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "value": {
                                "type": "number"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "value"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "value": {
                                "type": "array",
                                "contains": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ]
            }
        },
        "layer_settings": {
            "description": "The different kind of settings of layers",
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "label",
                            "description",
                            "type",
                            "default"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique identifier of a setting",
                                "type": "string"
                            },
                            "env": {
                                "description": "The environment variable that may be used to set this setting",
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [ "STRING", "SAVE_FOLDER" ]
                            },
                            "default": {
                                "type": "string"
                            },
                            "label": {
                                "description": "The string used to identify the setting to the user",
                                "type": "string"
                            },
                            "description": {
                                "description": "The description of the setting",
                                "type": "string"
                            },
                            "url": {
                                "description": "The URL to find more information about the setting",
                                "type": "string"
                            },
                            "platforms": {
                                "$ref": "#/definitions/platforms"
                            },
                            "status": {
                                "$ref": "#/definitions/status"
                            },
                            "view": {
                                "$ref": "#/definitions/view"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "label",
                            "description",
                            "type",
                            "default"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique identifier of a setting",
                                "type": "string"
                            },
                            "env": {
                                "description": "The environment variable that may be used to set this setting",
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [ "SAVE_FILE", "LOAD_FILE" ]
                            },
                            "filter": {
                                "type": "string"
                            },
                            "default": {
                                "type": "string"
                            },
                            "label": {
                                "description": "The string used to identify the setting to the user",
                                "type": "string"
                            },
                            "description": {
                                "description": "The description of the setting",
                                "type": "string"
                            },
                            "url": {
                                "description": "The URL to find more information about the setting",
                                "type": "string"
                            },
                            "platforms": {
                                "$ref": "#/definitions/platforms"
                            },
                            "status": {
                                "$ref": "#/definitions/status"
                            },
                            "view": {
                                "$ref": "#/definitions/view"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "label",
                            "description",
                            "type",
                            "default"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique identifier of a setting",
                                "type": "string"
                            },
                            "env": {
                                "description": "The environment variable that may be used to set this setting",
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [ "FRAMES" ]
                            },
                            "default": {
                                "type": "string",
                                "pattern": "^(([0-9]+-[0-9]+)|[0-9]+)(,(([0-9]+-[0-9]+)|([0-9]+)))*$"
                            },
                            "label": {
                                "description": "The string used to identify the setting to the user",
                                "type": "string"
                            },
                            "description": {
                                "description": "The description of the setting",
                                "type": "string"
                            },
                            "url": {
                                "description": "The URL to find more information about the setting",
                                "type": "string"
                            },
                            "platforms": {
                                "$ref": "#/definitions/platforms"
                            },
                            "status": {
                                "$ref": "#/definitions/status"
                            },
                            "view": {
                                "$ref": "#/definitions/view"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "label",
                            "description",
                            "type",
                            "default"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique identifier of a setting",
                                "type": "string"
                            },
                            "env": {
                                "description": "The environment variable that may be used to set this setting",
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [ "BOOL" ]
                            },
                            "default": {
                                "type": "boolean"
                            },
                            "label": {
                                "description": "The string used to identify the setting to the user",
                                "type": "string"
                            },
                            "description": {
                                "description": "The description of the setting",
                                "type": "string"
                            },
                            "url": {
                                "description": "The URL to find more information about the setting",
                                "type": "string"
                            },
                            "platforms": {
                                "$ref": "#/definitions/platforms"
                            },
                            "status": {
                                "$ref": "#/definitions/status"
                            },
                            "view": {
                                "$ref": "#/definitions/view"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "label",
                            "description",
                            "type",
                            "default"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique identifier of a setting",
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [ "FLOAT" ]
                            },
                            "env": {
                                "description": "The environment variable that may be used to set this setting",
                                "type": "string"
                            },
                            "label": {
                                "description": "The string used to identify the setting to the user",
                                "type": "string"
                            },
                            "description": {
                                "description": "The description of the setting",
                                "type": "string"
                            },
                            "url": {
                                "description": "The URL to find more information about the setting",
                                "type": "string"
                            },
                            "platforms": {
                                "$ref": "#/definitions/platforms"
                            },
                            "status": {
                                "$ref": "#/definitions/status"
                            },
                            "view": {
                                "$ref": "#/definitions/view"
                            },
                            "range": {
                                "$ref": "#/definitions/float_range"
                            },
                            "unit": {
                                "description": "The unit of measurement",
                                "type": "string"
                            },
                            "default": {
                                "type": "number"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "label",
                            "description",
                            "type",
                            "default"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique identifier of a setting",
                                "type": "string"
                            },
                            "env": {
                                "description": "The environment variable that may be used to set this setting",
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [ "INT" ]
                            },
                            "label": {
                                "description": "The string used to identify the setting to the user",
                                "type": "string"
                            },
                            "description": {
                                "description": "The description of the setting",
                                "type": "string"
                            },
                            "url": {
                                "description": "The URL to find more information about the setting",
                                "type": "string"
                            },
                            "platforms": {
                                "$ref": "#/definitions/platforms"
                            },
                            "status": {
                                "$ref": "#/definitions/status"
                            },
                            "view": {
                                "$ref": "#/definitions/view"
                            },
                            "range": {
                                "$ref": "#/definitions/int_range"
                            },
                            "unit": {
                                "description": "The unit of measurement",
                                "type": "string"
                            },
                            "default": {
                                "type": "integer"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "label",
                            "description",
                            "type",
                            "default",
                            "flags"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique identifier of a setting",
                                "type": "string"
                            },
                            "env": {
                                "description": "The environment variable that may be used to set this setting",
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [ "ENUM" ]
                            },
                            "label": {
                                "description": "The string used to identify the setting to the user",
                                "type": "string"
                            },
                            "description": {
                                "description": "The description of the setting",
                                "type": "string"
                            },
                            "url": {
                                "description": "The URL to find more information about the setting",
                                "type": "string"
                            },
                            "platforms": {
                                "$ref": "#/definitions/platforms"
                            },
                            "status": {
                                "$ref": "#/definitions/status"
                            },
                            "view": {
                                "$ref": "#/definitions/view"
                            },
                            "flags": {
                                "$ref": "#/definitions/flags"
                            },
                            "default": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "label",
                            "description",
                            "type",
                            "default",
                            "flags"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique identifier of a setting",
                                "type": "string"
                            },
                            "env": {
                                "description": "The environment variable that may be used to set this setting",
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [ "FLAGS" ]
                            },
                            "default": {
                                "type": "array",
                                "contains": {
                                    "type": "string"
                                }
                            },
                            "label": {
                                "description": "The string used to identify the setting to the user",
                                "type": "string"
                            },
                            "description": {
                                "description": "The description of the setting",
                                "type": "string"
                            },
                            "url": {
                                "description": "The URL to find more information about the setting",
                                "type": "string"
                            },
                            "platforms": {
                                "$ref": "#/definitions/platforms"
                            },
                            "status": {
                                "$ref": "#/definitions/status"
                            },
                            "view": {
                                "$ref": "#/definitions/view"
                            },
                            "flags": {
                                "$ref": "#/definitions/flags"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "key",
                            "label",
                            "description",
                            "type",
                            "default",
                            "list"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "description": "The unique identifier of a setting",
                                "type": "string"
                            },
                            "env": {
                                "description": "The environment variable that may be used to set this setting",
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [ "LIST" ]
                            },
                            "default": {
                                "type": "array",
                                "items": {
                                    "additionalProperties": false,
                                    "properties": {
                                        "key": {
                                            "description": "The unique identifier of a setting",
                                            "type": "string"
                                        },
                                        "enabled": {
                                            "description": "Is the listed value enabled",
                                            "type": "boolean"
                                        }
                                    }
                                }
                            },
                            "label": {
                                "description": "The string used to identify the setting to the user",
                                "type": "string"
                            },
                            "description": {
                                "description": "The description of the setting",
                                "type": "string"
                            },
                            "url": {
                                "description": "The URL to find more information about the setting",
                                "type": "string"
                            },
                            "platforms": {
                                "$ref": "#/definitions/platforms"
                            },
                            "status": {
                                "$ref": "#/definitions/status"
                            },
                            "view": {
                                "$ref": "#/definitions/view"
                            },
                            "list": {
                                "type": "array",
                                "contains": {
                                    "type": "string"
                                }
                            },
                            "list_only": {
                                "description": "To exclude any additional values that the values in the list",
                                "type": "boolean"
                            }
                        }
                    }
                ]
            }
        }
    }
